{
  "name": "@dsisolutions/halogen",
  "version": "0.3.1",
  "description": "A collection of loading spinners with React.js",
  "main": "Halogen.js",
  "author": "Yuanyan Cao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DSI-Solutions/halogen.git"
  },
  "dependencies": {
    "domkit": "0.0.1",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^6.3.3",
    "browserify-shim": "^3.8.0",
    "chalk": "^0.5.1",
    "codemirror": "^5.0.0",
    "del": "^0.1.3",
    "eslint": "^4.7.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "gulp": "^3.8.10",
    "gulp-babel": "^6.1.2",
    "gulp-bump": "^0.1.11",
    "gulp-connect": "^2.2.0",
    "gulp-gh-pages": "^0.4.0",
    "gulp-git": "^2.4.2",
    "gulp-less": "^1.3.6",
    "gulp-rename": "^1.2.0",
    "gulp-streamify": "^0.0.5",
    "gulp-uglify": "^1.0.1",
    "gulp-util": "^3.0.1",
    "merge-stream": "^0.1.6",
    "vinyl-paths": "^1.0.0",
    "vinyl-source-stream": "^1.0.0",
    "watchify": "^2.1.1"
  },
  "browserify": {
    "transform": []
  },
  "browserify-shim": {
    "react": "global:React"
  },
  "scripts": {
    "release": "gulp release"
  },
  "keywords": [
    "react",
    "react-component",
    "loader",
    "spinner",
    "halogen"
  ],
  "bugs": {
    "url": "https://github.com/DSI-Solutions/halogen/issues"
  },
  "homepage": "https://github.com/DSI-Solutions/halogen#readme",
  "directories": {
    "example": "example"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-airbnb"
    ],
    "rules": {
      "arrow-body-style": 0,
      "class-methods-use-this": 0,
      "func-names": 0,
      "generator-star-spacing": 0,
      "import/extensions": [
        "off",
        "never"
      ],
      "jsx-a11y/no-static-element-interactions": 0,
      "max-len": 0,
      "no-await-in-loop": 0,
      "no-bitwise": 0,
      "no-console": 0,
      "no-continue": 0,
      "no-extra-boolean-cast": 0,
      "no-global-assign": 0,
      "no-lonely-if": 0,
      "no-multi-spaces": 0,
      "no-param-reassign": 0,
      "no-plusplus": 0,
      "no-restricted-globals": 0,
      "no-restricted-syntax": [
        "error",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-shadow": 0,
      "padded-blocks": 0,
      "radix": 0,
      "react/forbid-prop-types": 0,
      "react/prefer-stateless-function": 0,
      "react/jsx-filename-extension": 0,
      "react/require-default-props": 0,
      "react/no-array-index-key": 0,
      "react/jsx-indent": 0
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
